<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD7C7C"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cat1"
        android:layout_width="192dp"
        android:layout_height="298dp"
        app:layout_constraintBottom_toTopOf="@+id/text3"
        app:layout_constraintEnd_toStartOf="@+id/cat3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275"
        app:srcCompat="@drawable/cat1"
        />

    <ImageView
        android:id="@+id/cat2"
        android:layout_width="176dp"
        android:layout_height="198dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintVertical_bias="0.898"
        app:srcCompat="@drawable/cat2"
         />

    <ImageView
        android:id="@+id/cat3"
        android:layout_width="189dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toTopOf="@+id/text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cat1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121"
        app:srcCompat="@drawable/cat3"
         />

    <ImageView
        android:id="@+id/cat4"
        android:layout_width="209dp"
        android:layout_height="294dp"
        android:layout_marginEnd="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cat4"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="166dp"
        android:layout_height="87dp"
        android:layout_marginTop="76dp"
        android:background="#000000"
        android:text="Наташ, ты спишь?"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="207dp"
        android:layout_height="85dp"
        android:layout_marginTop="204dp"
        android:background="#000000"
        android:text="Уже 6 часов утра, Наташ"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/cat2"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toEndOf="@+id/cat1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="38dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="252dp"
        android:layout_height="122dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="320dp"
        android:background="#000000"
        android:text="Вставай, мы там всё уронили"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="265dp"
        android:layout_height="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="120dp"
        android:background="#000000"
        android:text="Мы уронили вообще всё, Наташ, честно"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>